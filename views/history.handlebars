         xArray.push(time);
         yArray2.push(response.data[i].averageHashrate / 1000000);
         yArray3.push(response.data[i].reportedHashrate / 1000000);
         console.log(xArray);
         console.log(yArray);
         console.log(yArray2);
         console.log(yArray3);
         // var time2 = new Date(1516737600);
         // time2.toString("MMM dd"); 
         // console.log(time2);
       };
       var trace1 = {
         x: xArray,
         y: yArray,
         name: 'current'
       }

       var trace2 = {
         x: xArray,
         y: yArray2,
         name: 'average'
       }

       var trace3 = {
         x: xArray,
         y: yArray3,
         name: 'recorded'
       }

       var data = [
         trace1, 
